<turbo-frame <%= build_attributes(
  id:"app-frame",
  data: { turbo_action: "advance" }
) %> >
  <main class="app-main" data-context="/admin/movies">
    <header class="content-header">

      <div class="content-header-title">
        <h1><%= build title %></h1>
      </div>

      <div class="content-header-toolbars">

        <% actions.each do |action| %>
          <div class="btn-toolbar secondary-toolbar" role="toolbar">
            <%= build(action, bind_to)  =%>
          </div>
        <% end %>

      </div>

    </header>

    <div class="main-content-area">
      <div class="main-content-container">

        <div class="main-content">
          <% if notice %>
            <%= build alert(notice[:message], notice[:status], notice[:backtrace]) %>
          <% end %>
          
          <%= content %>
        </div>
      </div>
    </div>
  </main>

</turbo-frame>