
<!DOCTYPE html>
<html>
  <head>
    <title>NTN - Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="view-transition" content="same-origin" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link rel='stylesheet' url='https://css.gg/css'>

    <meta name="turbo-prefetch" content="false">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

  </head>

  <body>

  <%= build app_loader %>
  
  <%= 
    build app(
      title: "NTN - Admin",
      env: "NTN",
      menu: [
        {
          group: t("Entretiens"),
          items: [
            {
              url: "/reviews",
              icon: "fa fa-tachometer",
              content: t("Liste des entretiens"),
            },
            {
              url: "/template",
              icon: "fa fa-tachometer",
              content: t("Modèles d'entretien"),
            },
            {
              url: "/session",
              icon: "fa fa-tachometer",
              content: t("Nouvelle campagne"),
            },
          ]
        },
        {
          group: t("Configuration"),
          items: [
            {
              url: build_model_url(Employee, index: true),
              icon: "fa fa-key",
              content: t("Employés"),
            },
            {
              url: build_model_url(User, index: true),
              icon: "fa fa-user-lock",
              content: t("Administrateurs"),
            },
          ]
        }
      ],
    ) do 
      yield 
    end
  %>
  
  </body>
</html>